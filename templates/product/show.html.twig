{# templates/product/show.html.twig #}

{% extends 'base.html.twig' %}
{% block body %}
<div class="product-details">
    <h1>Product Details</h1>
    <div class="product-list">
        {% for car in product %}
            <div class="product-item">
                <h2>{{ car.namecar }}</h2>
                <p>{{ car.id }}</p>
                <img src="{{ asset('uploads/image/' ~ car.image) }}" alt="{{ car.namecar }} Image">
                <p class="price">Price: ${{ car.price }}</p>
                <a class="add-to-order" href="{{ path('add_to_order', {'id': car.id}) }}">Add Order</a>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
