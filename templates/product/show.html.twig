{# templates/product/show.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
<h1>Product Details</h1>
    {% for car in product %}
        
        <h2>{{ car.namecar }}</h2>
        <p>{{ car.id }}</p>
        <p>Price: ${{ car.price }}</p>
        <a href="{{ path('add_to_order', {'id': car.id}) }}">Add Order</a>
    {% endfor %}
{% endblock %}
